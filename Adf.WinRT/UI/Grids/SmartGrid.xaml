<ui:SmartControl
    x:Class="Adf.WinRT.UI.Grids.SmartGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ui="using:Adf.WinRT.UI"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <ui:SmartControl.Resources>
        <CollectionViewSource x:Name="Items" IsSourceGrouped="False" />
    </ui:SmartControl.Resources>
    
    <ListView
        x:Name="View"
        ItemsSource="{Binding Source={StaticResource Items}}"
        SelectionMode="None"
        IsItemClickEnabled="True"
        SelectionChanged="SelectChanged" 
        x:FieldModifier="public"
        Style="{Binding Source={StaticResource SmartGridStyle}}"
        ItemContainerStyle="{Binding Source={StaticResource SmartGridItemContainerStyle}}"
        Margin="30,15,30,30">
    </ListView>
</ui:SmartControl>
